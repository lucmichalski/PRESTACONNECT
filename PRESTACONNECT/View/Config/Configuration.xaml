<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    xmlns:converters="clr-namespace:Alternetis.Windows.Converters;assembly=Alternetis.Windows"
    xmlns:localconverters="clr-namespace:PRESTACONNECT.Converters"
	x:Class="PRESTACONNECT.Configuration"
	xmlns:local="clr-namespace:PRESTACONNECT"
	xmlns:view="clr-namespace:PRESTACONNECT.View" 
	x:Name="Window"
    xmlns:dg="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
	Title="Configuration"
	MinWidth="1024" MinHeight="768" 
	Width="1024" Height="768"
	WindowStyle="ThreeDBorderWindow" Icon="/PRESTACONNECT;component/prestaconnect.ico" WindowStartupLocation="CenterScreen"
    ShowInTaskbar="True"
    Background="{DynamicResource ResourceKey=WindowBackgroundBrush}" Loaded="Window_Loaded" xmlns:my="clr-namespace:PRESTACONNECT.View" xmlns:my1="clr-namespace:PRESTACONNECT.View.Config">
	<Window.Resources>
		<converters:HasCountConverter x:Key="HasCount"/>
		<converters:IsNullConverter x:Key="IsNull"/>
		<localconverters:DateLivraisonModeToBooleanConverter x:Key="dateLivraisonModeToBooleanConverter"></localconverters:DateLivraisonModeToBooleanConverter>
		<localconverters:DateLivraisonModeToJoursEnabledConverter x:Key="dateLivraisonModeToJoursEnabledConverter"></localconverters:DateLivraisonModeToJoursEnabledConverter>
	</Window.Resources>
	<Grid x:Name="LayoutRoot">
		<Image Source="/PRESTACONNECT;component/img/setting.png" Width="48" Height="48" HorizontalAlignment="Right" Margin="0,12,12,0" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment, Height, GridBox" />
		<Button Visibility="{Binding ExtranetOnly}" Content="Avancées ..." HorizontalAlignment="Right" Margin="0,0,146,12" VerticalAlignment="Bottom" Width="122" Height="38" Cursor="Hand" Click="Advanced_Click" />
		<Button Content="Valider" Name="ButtonSubmit" HorizontalAlignment="Right" Margin="0,0,8,12" VerticalAlignment="Bottom" Width="122" Height="38" Cursor="Hand" Click="ButtonSubmit_Click"  />
		<TabControl Margin="8,68,8,56">
			<TabItem Header="Global" x:Name="TabItemGlobal">
				<Grid>
					<Label Content="Courriel de l'administrateur du site : " Height="20" HorizontalAlignment="Left" Margin="15,0,0,285" VerticalAlignment="Bottom" Width="192" />
					<TextBox HorizontalAlignment="Left" Margin="218,0,0,285" Name="TextBoxMailAdminSite" Text="administrateur@domaine.com" ToolTip="administrateur@domaine.com" VerticalAlignment="Bottom" Width="241" />
					<Label Content="* Cette adresse est utile à diverses notifications envoyées par PrestaConnect." FontSize="10" FontStretch="Normal" FontStyle="Oblique" FontWeight="Normal" Height="16" HorizontalAlignment="Left" Margin="465,0,0,289" VerticalAlignment="Bottom" Width="335" />

					<Label Content="Clé cookie de votre site Prestashop : " HorizontalAlignment="Left" Margin="15,0,0,257" VerticalAlignment="Bottom" Height="20" />
					<PasswordBox Password="" x:Name="PasswordBoxPrestashopCookieKey" Margin="218,0,168,255" VerticalAlignment="Bottom" Height="24" Width="590" />

					<CheckBox Visibility="{Binding ExtranetOnly}" x:Name="CheckBoxImage" Content="Gestion des images et des documents dans Prestaconnect" HorizontalAlignment="Left" Margin="14,0,0,218" VerticalAlignment="Bottom" />
					<TabControl Visibility="{Binding ExtranetOnly}" Height="200" Margin="8,0,8,8" Name="tabControlImages" VerticalAlignment="Bottom" IsEnabled="{Binding ElementName=CheckBoxImage, Path=IsChecked}">
						<TabItem Header="Gestion des images PrestaShop">
							<Grid>
								<Label Content="* Cette option s'applique uniquement au transfert des images ajoutées et lors de l'import des images depuis Prestashop" FontSize="10" FontStyle="Oblique" Height="16" HorizontalAlignment="Left" Margin="287,9,0,0" VerticalAlignment="Top" />
								<Label Content="Mode de gestion des images Prestashop à utiliser :" Height="20" HorizontalAlignment="Left" Margin="13,9,0,0" VerticalAlignment="Top" />
								<ListBox Name="ListBoxImageStorageMode" Height="70" ItemsSource="{Binding Path=ListImageStorageMode}" Margin="125,35,0,0" SelectedItem="{Binding Path=SelectedImageStorageMode, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="325" SelectionChanged="ListBoxImageStorageMode_SelectionChanged">
									<ListBox.ItemTemplate>
										<DataTemplate>
											<TextBlock Text="{Binding Path=Intitule}" />
										</DataTemplate>
									</ListBox.ItemTemplate>
								</ListBox>
								<CheckBox x:Name="CheckBoxImageSynchroPositionLegende" IsChecked="{Binding ImageSynchroPositionLegende}" Content="Pour les images déjà transférées dans Prestashop renvoyer la position et la légende lors des synchronisation images." HorizontalAlignment="Left" Margin="13,121,0,0" VerticalAlignment="Top" />
								<Label Content="** Cette option est indispensable si vous gérez ces informations dans GADA" FontSize="10" FontStyle="Oblique" Height="16" HorizontalAlignment="Left" Margin="13,143,0,0" VerticalAlignment="Top" />
							</Grid>
						</TabItem>
						<TabItem Header="Gestion des images PrestaConnect">
							<Grid>
								<Label Content="Système de stockage local des images articles :" Height="20" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
								<Label Content="{Binding CurrentLocalStorageMode.Intitule}" Height="20" HorizontalAlignment="Left" Margin="269,10,0,0" VerticalAlignment="Top" />
								<Button Content="Passer au mode de stockage avancé" Height="29" HorizontalAlignment="Left" IsEnabled="{Binding LocalStorageModeIsSimple}" Margin="154,36,0,0" Name="ButtonChangeLocalStorageMode" VerticalAlignment="Top" Width="240" Click="ButtonChangeLocalStorageMode_Click" />
							</Grid>
						</TabItem>
					</TabControl>
					<TabControl Margin="10,12,10,315">
						<TabItem Header="Langue" Visibility="{Binding ExtranetOnly}">
							<Grid>
								<Label Content="Langue pour laquelle PrestaConnect doit permettre l'édition des données catalogues et produits :" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" />
								<ComboBox x:Name="ComboBoxLang" HorizontalAlignment="Left" Margin="546,8,0,0" VerticalAlignment="Top" Width="200" ToolTip="Langue" />
							</Grid>
						</TabItem>
						<TabItem Header="Gestion des clients" Visibility="{Binding ExtranetOnly}">
							<Grid>
								<Label Content="Mode de gestion des nouveaux clients après inscription sur votre site:" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" />
								<RadioButton Content="Mode BtoC (création automatique des clients)" x:Name="RadioButtonBToC" HorizontalAlignment="Left" Margin="46,39,0,0" VerticalAlignment="Top" />
								<RadioButton Content="Mode BtoB (mappage manuel des clients)" x:Name="RadioButtonBToB" Margin="46,75,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
								<CheckBox IsChecked="{Binding ClientMultiMappageBtoB}" IsEnabled="{Binding ElementName=RadioButtonBToB, Path=IsChecked}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="321,75,0,0" Width="280">
									<Grid>
										<TextBlock TextWrapping="Wrap">
                            Autoriser le mappage de plusieurs comptes client PrestaShop avec un même compte client Sage</TextBlock>
									</Grid>
								</CheckBox>
							</Grid>
						</TabItem>
						<TabItem Header="Gestion des remises" Visibility="{Binding ExtranetOnly}">
							<Grid>
								<Label Content="Remise à appliquer :" HorizontalAlignment="Left" Margin="12,18,0,0" VerticalAlignment="Top" />
								<ListBox ItemsSource="{Binding Path=ListRemiseMode}" SelectedItem="{Binding Path=SelectedRemiseMode, Mode=TwoWay}" DisplayMemberPath="Intitule" HorizontalAlignment="Left" Margin="132,6,0,6" Width="428" />
								<Label Visibility="{Binding SelectedRemiseMode.ShowConflit}" Content="Gestion des conflit de remises :" HorizontalAlignment="Left" Margin="629,18,0,0" VerticalAlignment="Top" />
								<ListBox Visibility="{Binding SelectedRemiseMode.ShowConflit}" DisplayMemberPath="Intitule" HorizontalAlignment="Left" ItemsSource="{Binding Path=ListRemiseConflit}" Margin="629,44,0,6" SelectedItem="{Binding Path=SelectedRemiseConflit, Mode=TwoWay}" Width="311" />
							</Grid>
						</TabItem>
						<TabItem Header="Connexion FTP" Name="TabItemFTP">
							<Grid>
								<Label Content="Adresse FTP :" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" />
								<TextBox x:Name="TextBoxFTPIP" HorizontalAlignment="Left" Margin="131,8,0,0" TextWrapping="Wrap" Text="ftp://" VerticalAlignment="Top" Width="325" />
								<CheckBox Name="CheckBoxFTPSSL" Content="Connexion FTP en SSL" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="462,12,0,0" />
								<Label Content="Utilisateur FTP :" HorizontalAlignment="Left" Margin="12,42,0,0" VerticalAlignment="Top" />
								<TextBox x:Name="TextBoxFTPUser" HorizontalAlignment="Left" Margin="131,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" />
								<Label Content="Mot de passe FTP :" HorizontalAlignment="Left" Margin="12,71,0,0" VerticalAlignment="Top" />
								<PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="131,66,0,0" VerticalAlignment="Top" Width="325" Height="24" />
								<Button x:Name="ButtonFTPTest" Click="ButtonFTPTest_Click" Content="Tester mon accès FTP" HorizontalAlignment="Left" Margin="475,64,0,0" VerticalAlignment="Top" Width="147" Height="25.96" />
							</Grid>
						</TabItem>
					</TabControl>
				</Grid>
			</TabItem>
			<TabItem Header="Catalogue" x:Name="TabItemCatalogue">
				<TabControl Margin="8">
					<TabItem Header="Général" Name="tabItemCatalogueGeneral">
						<Grid>
							<Label Visibility="{Binding ExtranetOnly}" Content="Visibilité des catalogues et tarification des produits par groupe de client :" HorizontalAlignment="Left" Margin="26,36,0,0" VerticalAlignment="Top" />
							<DataGrid AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="None" HeadersVisibility="Column"
                              ItemsSource="{Binding Path=ListGroup}" SelectedItem="{Binding SelectedGroup}" Margin="26,58,135,115" SelectionMode="Single" >
								<DataGrid.Columns>
									<DataGridTextColumn Binding="{Binding Path=Intitule}" Header="Groupe" IsReadOnly="True" Width="50*" />
									<DataGridTemplateColumn Header="Catégorie tarifaire" Width="50*">
										<DataGridTemplateColumn.CellTemplate>
											<DataTemplate>
												<Grid>
													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="*" />
														<ColumnDefinition Width="22" />
													</Grid.ColumnDefinitions>
													<TextBlock Text="{Binding Path=CategorieTarifaire.CT_Intitule, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="2"/>
													<Button x:Name="ButtonUnselectCatTarif" Grid.Column="1" Click="ButtonUnselectCatTarif_Click">
														<Image Source="/PRESTACONNECT;component/Resources/remove.png" Width="20" Height="20"/>
													</Button>
												</Grid>
											</DataTemplate>
										</DataGridTemplateColumn.CellTemplate>
										<DataGridTemplateColumn.CellEditingTemplate>
											<DataTemplate>
												<ComboBox ItemsSource="{Binding Path=DataContext.ListCategoriesTarifaires, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" 
                                                  DisplayMemberPath="CT_Intitule" SelectedItem="{Binding Path=CategorieTarifaire, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
											</DataTemplate>
										</DataGridTemplateColumn.CellEditingTemplate>
									</DataGridTemplateColumn>
									<DataGridCheckBoxColumn Binding="{Binding Path=Show}" Header="Montrer" Width="75" Visibility="{Binding ExtranetOnly}"/>
								</DataGrid.Columns>
							</DataGrid>
							<CheckBox Visibility="{Binding ExtranetOnly}" x:Name="CheckBoxCanDeleteCatalogProductAssociation" IsChecked="{Binding CanDeleteCatalogProductAssociation}" Content="Autoriser Prestaconnect à supprimer les associations catalogues-produits" HorizontalAlignment="Left" Margin="26,0,0,66" Height="16" VerticalAlignment="Bottom" />
							<Label Visibility="{Binding ExtranetOnly}" Content="* Seules les associations concernant les catalogues existants dans Prestaconnect ET Prestashop sont affectées par cette fonctionnalité." FontSize="10" FontStyle="Oblique" HorizontalAlignment="Left" Margin="26,0,0,42" Height="16" VerticalAlignment="Bottom" />
						</Grid>
					</TabItem>
					<TabItem Header="Import via les informations libres" Name="tabItemCatalogueImport" Visibility="{Binding ExtranetOnly}">
						<Grid>
							<DataGrid AutoGenerateColumns="False"
                                          Name="DataGridInformationLibreArticle" SelectionMode="Single" 
                                          CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="None" HeadersVisibility="Column"
                                          ItemsSource="{Binding Path=ListInformationLibreArticle}" Margin="0,120,0,0">
								<DataGrid.Columns>
									<DataGridTextColumn Binding="{Binding Path=Sag_InfoLibreArticle}" Header="Information libre Article" IsReadOnly="True" Width="30*"/>
									<DataGridTextColumn Header="Niveau de catalogue" Width="30*" Binding="{Binding Path=Inf_Catalogue}" IsReadOnly="True"/>
									<DataGridTextColumn Header="Parent" Width="30*" Binding="{Binding Path=Inf_Parent}" IsReadOnly="True"/>
									<DataGridTemplateColumn Header="Supprimer" Width="10*">
										<DataGridTemplateColumn.CellTemplate>
											<DataTemplate>
												<Button x:Name="DataGridImportInfoLibreCataButtonDelete" Click="DataGridImportInfoLibreCataButtonDelete_Click">Supprimer</Button>
											</DataTemplate>
										</DataGridTemplateColumn.CellTemplate>
									</DataGridTemplateColumn>
									<DataGridTextColumn Header="Statistique" Width="30*" Binding="{Binding Path=Inf_IsStat}" IsReadOnly="True" Visibility="Hidden" />
								</DataGrid.Columns>
							</DataGrid>
							<Label Content="Niveau catalogue :" HorizontalAlignment="Left" Margin="31,62,0,0" VerticalAlignment="Top" />
							<ComboBox Margin="212,84,0,0" Name="CB_ParentCatalogue" SelectionChanged="CB_ParentCatalogue_SelectionChanged" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="255" />
							<Label Content="Parent :" Height="20" HorizontalAlignment="Left" Margin="31,88,0,0" VerticalAlignment="Top" Width="170" />
							<Button Content="Ajouter" Height="33" IsEnabled="False" Margin="512,71,0,0" Name="Btn_AddInfoLibreCataogue" VerticalAlignment="Top" Click="Btn_AddInfoLibreCataogue_Click" HorizontalAlignment="Left" Width="145" />
							<ComboBox Margin="212,54,0,0" Name="Cb_NiveauCatalogue" SelectionChanged="Cb_NiveauCatalogue_SelectionChanged" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" />
							<RadioButton Height="24" HorizontalAlignment="Left" Margin="21,24,0,0" Name="RadIL" VerticalAlignment="Top" Width="467">
								<StackPanel Orientation="Horizontal" Width="428">
									<TextBlock Text="à partir d'une information libre" VerticalAlignment="Center" />
									<ComboBox DisplayMemberPath="CB_Name" ItemsSource="{Binding ListSageInfolibreArticleTextTable}" Margin="10,0,0,0" Name="CB_InfoLibreCatalogue" SelectionChanged="CB_InfoLibreCatalogue_SelectionChanged" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="255" IsEnabled="{Binding ElementName=RadIL, Path=IsChecked}"/>
								</StackPanel>
							</RadioButton>
							<RadioButton Height="24" HorizontalAlignment="Right" Margin="0,23,31,0" Name="RadStat" VerticalAlignment="Top" Width="425">
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="à partir d'une statistique" VerticalAlignment="Center" />
									<ComboBox DisplayMemberPath="P_IntStatArt1" Height="24" ItemsSource="{Binding ListSageStatistiqueArticle}" Margin="10,0,0,0" Name="CB_StatCatalogue" Width="255" IsEnabled="{Binding ElementName=RadStat, Path=IsChecked}" SelectionChanged="CB_StatCatalogue_SelectionChanged" />
								</StackPanel>
							</RadioButton>

						</Grid>
					</TabItem>
				</TabControl>
			</TabItem>
			<TabItem Header="Article" x:Name="TabItemArticle" Visibility="{Binding ExtranetOnly}">
				<Grid>
					<TabControl Margin="8">
						<TabItem Header="Général" Name="tabItemArticleGeneral">
							<Grid>
								<TabControl Margin="20">
									<TabItem Header="Conditionnements">
										<Grid>
											<CheckBox HorizontalAlignment="Left" IsChecked="{Binding ImportConditionnementActif}" Margin="20,16,0,0" 
                                                  Name="CheckBoxGestionConditionnementActif" VerticalAlignment="Top" 
                                                  Content="Activer l'import des conditionnements en tant que déclinaisons. !! Attention les produits en conditionnement ne pourront plus être vendus à l'unité !!" />
											<CheckBox HorizontalAlignment="Left" IsChecked="{Binding ConditionnementQuantiteToUPC}" Margin="20,46,0,0" VerticalAlignment="Top" 
                                                  Content="Activer l'écriture de la quantité de l'énuméré de conditionnement dans la zone &quot;UPC&quot; de la déclinaison." />
											<CheckBox HorizontalAlignment="Left" IsChecked="{Binding LimiteStockConditionnementMini}" Margin="20,76,0,0" VerticalAlignment="Top" Width="805">
												<Grid>
													<TextBlock TextWrapping="Wrap" TextAlignment="Justify">
                                                         Activer la gestion de la valeur maximale du stock produit en fonction de l'unité de conditionnement la plus petite, permet ainsi l'affichage du produit hors-stock si le nombre d'unités en stock est inférieur au plus petit conditionnement transféré.
													</TextBlock>
												</Grid>
											</CheckBox>
										</Grid>
									</TabItem>
									<TabItem Header="Gestion des stocks">
										<Grid>
											<Label Content="Dépôt(s) :" HorizontalAlignment="Left" Margin="17,17,0,0" VerticalAlignment="Top" />
											<ListBox Margin="80,10,480,10" x:Name="ListBoxSupply">
												<ListBox.ItemTemplate>
													<HierarchicalDataTemplate>
														<CheckBox Content="{Binding Sup_Name}" IsChecked="{Binding Sup_Active}" Click="CheckBoxSupply_Click" />
													</HierarchicalDataTemplate>
												</ListBox.ItemTemplate>
											</ListBox>

											<Label Content="Stock à afficher sur le site :" Margin="0,37,307,0" VerticalAlignment="Top" HorizontalAlignment="Right" />
											<ComboBox x:Name="ComboBoxArticleStock" Margin="0,30,22,0" VerticalAlignment="Top" SelectionChanged="ComboBoxArticleStock_SelectionChanged" HorizontalAlignment="Right" Width="230" />
											<TextBlock x:Name="LabelInfoGestionStock" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Margin="0,76,22,0" Foreground="Black" FontStyle="Italic" HorizontalAlignment="Right" Width="411" />

											<Label Content="Comportement de commande si rupture de stock (affecté aux nouveaux articles) :" HorizontalAlignment="Right" Margin="0,153,17,0" VerticalAlignment="Top" Foreground="Black" />
											<ComboBox x:Name="ComboBoxArticleRupture" Margin="0,183,22,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="230" />

											<CheckBox IsChecked="{Binding StockNegatifZero}" Height="16" HorizontalAlignment="Right" Margin="0,243,50,0" VerticalAlignment="Top">
												<TextBlock TextWrapping="Wrap">
                                                    Lorsque le stock calculé est négatif envoyer la valeur 0 à PrestaShop
												</TextBlock>
											</CheckBox>
											<CheckBox IsChecked="{Binding StockNegatifZeroParDepot}" IsEnabled="{Binding StockNegatifZero}"  Height="16" HorizontalAlignment="Right" Margin="0,263,35,0" VerticalAlignment="Top">
												<TextBlock TextWrapping="Wrap">
                                                    Appliquer la valeur 0 de manière indépendante pour chaque dépôt
												</TextBlock>
											</CheckBox>

											<GroupBox Header="Articles en contremarque" Height="145" HorizontalAlignment="Right" Margin="0,298,22,0" Name="groupBoxContremarque" VerticalAlignment="Top" Width="423">
												<Grid>
													<CheckBox Content="Synchroniser le stock Sage" IsChecked="{Binding StockArticleContremarqueActif}" HorizontalAlignment="Left" Margin="15,61,0,0" Name="checkBoxStockContremarqueSage" VerticalAlignment="Top" />
													<Label Content="Stock forcé en contremarque :" HorizontalAlignment="Right" Margin="0,21,237,0" VerticalAlignment="Top" />
													<TextBox x:Name="TextBoxArticleContremarque" HorizontalAlignment="Right" Margin="0,17,126,0" TextWrapping="Wrap" Text="0" Width="98" MaxLength="4" VerticalAlignment="Top" />
												</Grid>
											</GroupBox>
										</Grid>
									</TabItem>
									<TabItem Header="Gestion du poids">
										<Grid>
											<Label Content="Type :" HorizontalAlignment="Left" Margin="17,17,0,0" VerticalAlignment="Top" />
											<ComboBox x:Name="ComboBoxArticleType" Margin="174,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="238" />
											<Label Content="Unité :" HorizontalAlignment="Left" Margin="17,49,0,0" VerticalAlignment="Top" />
											<ComboBox x:Name="ComboBoxArticleUnite" Margin="174,42,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="238" />
											<GroupBox Header="Conversion des énumérés en poids sur les déclinaisons pour les gammes :" Margin="17,85,466,60" Name="labelWeightConversion" >
												<Grid>
													<ListBox ItemsSource="{Binding Path=ListGamme}" Margin="6,6,6,60" Name="listBoxCombination">
														<ListBox.ItemTemplate>
															<DataTemplate>
																<Grid>
																	<Grid.ColumnDefinitions>
																		<ColumnDefinition MinWidth="170" Width="*" />
																		<ColumnDefinition Width="15" />
																	</Grid.ColumnDefinitions>
																	<TextBlock Grid.Column="0" HorizontalAlignment="Left" Text="{Binding Path=G_Intitule}" Width="Auto" />
																	<CheckBox Grid.Column="1" HorizontalAlignment="Right" IsChecked="{Binding Path=WeightConversion, Mode=TwoWay}" Width="Auto" />
																</Grid>
															</DataTemplate>
														</ListBox.ItemTemplate>
													</ListBox>
													<Label Content="Utilisation d'un coefficient multiplicateur :" Margin="18,0,0,37" Name="labelWeightCoefficient" VerticalAlignment="Bottom" HorizontalAlignment="Left"  />
													<ComboBox x:Name="ComboBoxInformationLibreCoefficient" ItemsSource="{Binding ListInfolibreCoefficient}" SelectedItem="{Binding SelectedInfolibreCoefficient}" DisplayMemberPath="CB_Name" Margin="18,0,0,7" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="220" />
												</Grid>
											</GroupBox>
											<CheckBox Content="Mettre à jour les poids lors de la synchronisation des stocks." Height="16" HorizontalAlignment="Left" Margin="17,0,0,24" Name="checkBoxPoidsSynchroStock" VerticalAlignment="Bottom" IsChecked="{Binding PoidsSynchroStock}"/>
										</Grid>
									</TabItem>
									<TabItem Header="Gestion des tarifs">
										<Grid>
											<Label Content="Catégorie tarifaire :" HorizontalAlignment="Left" Margin="17,17,0,0" VerticalAlignment="Top" />
											<ComboBox x:Name="ComboBoxArticleCategorieTarifaire" Margin="154,13,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="280" />
											<Button Height="26" HorizontalAlignment="Left" Margin="448,13,0,0" Name="Bt_Effacer_ArticleCategorieTarifaire" VerticalAlignment="Top" Width="70" Click="Bt_Effacer_ArticleCategorieTarifaire_Click">
												<StackPanel Orientation="Horizontal">
													<Image HorizontalAlignment="Center" Margin="2" Source="/PRESTACONNECT;component/Resources/remove.png" Width="16" />
													<TextBlock Margin="4,0,4,0" Text="Effacer" VerticalAlignment="Center" />
												</StackPanel>
											</Button>
											<Label Foreground="Black" HorizontalAlignment="Left" Margin="32,47,0,0" Content="Permet de définir le prix de base du produit et de ses déclinaisons à partir d'une catégorie tarifaire, sinon c'est le prix fiche article qui sera utilisé." FontStyle="Italic" VerticalAlignment="Top" />

											<Label Content="Catégorie comptable :" HorizontalAlignment="Left" Margin="17,111,0,0" VerticalAlignment="Top" />
											<ComboBox x:Name="ComboBoxArticleCategorieComptable" SelectionChanged="ComboBoxArticleCategorieComptable_SelectionChanged" Margin="154,107,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="280" />
											<Button Height="26" HorizontalAlignment="Left" Margin="448,107,0,0" Name="Bt_Effacer_ArticleCategorieComptable" VerticalAlignment="Top" Width="70" Click="Bt_Effacer_ArticleCategorieComptable_Click">
												<StackPanel Orientation="Horizontal">
													<Image HorizontalAlignment="Center" Margin="2" Source="/PRESTACONNECT;component/Resources/remove.png" Width="16" />
													<TextBlock Margin="4,0,4,0" Text="Effacer" VerticalAlignment="Center" />
												</StackPanel>
											</Button>
											<Label Foreground="Black" HorizontalAlignment="Left" Margin="32,141,0,0" Content="Permet d'affecter les règles de taxes aux produits en fonction du mappage des codes taxes." FontStyle="Italic" VerticalAlignment="Top" />

											<CheckBox Content="Indiquer à PrestaConnect d'ignorer les prix spécifiques Prestashop possédant des dates de début et de fin lors du transfert des tarifs depuis Sage." Height="16" HorizontalAlignment="Left" IsChecked="{Binding FiltreDatePrixPrestashop}" Margin="17,196,0,0" VerticalAlignment="Top" />
