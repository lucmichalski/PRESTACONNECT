<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="PRESTACONNECT.ImportSageArticleImage"
	x:Name="Window"
    xmlns:dg="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
	Title="Import des images articles depuis Sage"
	Width="320" Height="280"
	WindowStyle="None" 
    Icon="/PRESTACONNECT;component/prestaconnect.ico" 
    ResizeMode="NoResize" 
    WindowStartupLocation="CenterScreen" 
    ShowInTaskbar="True"
    AllowsTransparency="True"
    Background="Transparent" 
    Loaded="Window_Loaded"
    >
    <Grid>
        <Border BorderThickness="2" CornerRadius="6" 
                BorderBrush="{DynamicResource ResourceKey=SelectedBackgroundBrush}"
                Background="{DynamicResource ResourceKey=WindowBackgroundBrush}" />
        <Label Content="Import des images articles de Sage :" HorizontalAlignment="Left" Margin="80,58.723,0,0" VerticalAlignment="Top"/>
		<ProgressBar Name="ProgressBarArticleImage" Height="16" Margin="40,104,36.8,0" VerticalAlignment="Top"/>
		<Label Name="LabelInformation" Content="Informations :" HorizontalAlignment="Left" Margin="80,0,0,120" VerticalAlignment="Bottom"/>
	</Grid>
</Window>