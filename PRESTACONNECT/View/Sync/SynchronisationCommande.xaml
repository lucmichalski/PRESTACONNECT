<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="PRESTACONNECT.SynchronisationCommande"
	x:Name="Window"
    xmlns:dg="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
	Title="Synchronisation Commande"
	Width="320" Height="280"
	WindowStyle="None" 
    Icon="/PRESTACONNECT;component/prestaconnect.ico" 
    ResizeMode="NoResize" 
    WindowStartupLocation="CenterScreen" 
    ShowInTaskbar="True"
    Background="Transparent"
    AllowsTransparency="True"
    >
    <Grid>
        <Border BorderThickness="2" CornerRadius="6" 
                BorderBrush="{DynamicResource ResourceKey=SelectedBackgroundBrush}"
                Background="{DynamicResource ResourceKey=WindowBackgroundBrush}">
        </Border>
        <Label Content="Synchronisation des commandes :" Name="LabelTitleAction" HorizontalAlignment="Left" Margin="59,58,0,0" VerticalAlignment="Top"/>
		<ProgressBar Name="ProgressBarCommande" Height="16" Margin="36,104,36,0" VerticalAlignment="Top"/>
        <Label Name="LabelInformation" Content="Informations :" HorizontalAlignment="Left" Margin="59,136,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>